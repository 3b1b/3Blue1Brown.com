{
  "overrides": [
    {
      "files": "*.css",
      "options": {
        "plugins": ["prettier-plugin-tailwindcss"]
      }
    },
    {
      "files": "*.!(css)",
      "options": {
        "plugins": ["@ianvs/prettier-plugin-sort-imports"],
        "importOrder": [
          "<TYPES>^react",
          "<TYPES>^[a-zA-Z]",
          "<TYPES>^~/",
          "<TYPES>^/",
          "<TYPES>^./",
          "<TYPES>^../",
          "<TYPES>",
          "^react",
          "^[a-zA-Z]",
          "^~/",
          "^/",
          "^./",
          "^../"
        ],
        "importOrderParserPlugins": ["typescript", "jsx", "importAssertions"],
        "htmlWhitespaceSensitivity": "strict"
      }
    }
  ]
}
