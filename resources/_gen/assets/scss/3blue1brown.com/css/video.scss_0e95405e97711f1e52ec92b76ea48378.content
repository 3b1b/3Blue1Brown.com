.video {
  width: var(--width);
  max-width: 100%;
  margin: 20px auto; }
  .video:first-child {
    margin-top: 0; }
  .video:last-child {
    margin-bottom: 0; }
  .video div {
    position: relative;
    padding-bottom: 56.25%; }
    .video div iframe {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border: 0;
      z-index: 10; }
  .video:first-child {
    margin-top: 10px; }
